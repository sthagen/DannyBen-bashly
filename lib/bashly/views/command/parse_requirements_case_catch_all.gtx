= view_marker

if args.any?
  condition = "if"
  args.each do |arg|
    > {{ condition }} [[ -z ${args[{{ arg.name }}]+x} ]]; then
    =   arg.render(:validations).indent 2
    >   args[{{ arg.name }}]=$1
    >   shift
    
    condition = "elif"
  end

  > else
  >   other_args+=("$1")
  >   shift
  > fi

else
  > other_args+=("$1")
  > shift

end
